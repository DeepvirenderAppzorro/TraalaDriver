<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.appzorro.driverappcabscout">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/title_activity_maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.HomeScreenActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".view.ReviewActivity" />
        <activity
            android:name=".view.SignUp"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.CabCompanyActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.TripHistory"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.PathMapActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.RideHistory"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.MyBookingActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.Profile_Activity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.CashCollect"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.HelpActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.FareDetail"
            android:windowSoftInputMode="stateHidden" />

        <service android:name=".model.FireIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".model.FireMsgService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.facebook.accountkit.ApplicationName"
            android:value="@string/app_name" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id_accountKit" />
        <meta-data
            android:name="com.facebook.accountkit.ClientToken"
            android:value="@string/Account_kit_client_token" />

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/Account_protocol_scheme" />
            </intent-filter>
        </activity>
        <!--
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="410517842613797" />
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_android_map_api_key_v2" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".view.HistoryDeatil"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.DriverPathActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.Practiseactivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.Rating"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.StopTripsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.NotificatonDialog"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.MyDialog" />

        <service
            android:name=".model.SignalRService"
            android:enabled="true" />

        <receiver android:name=".view.PathMapActivity$ShutDownReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="android.intent.action.QUICKBOOT_POWEROFF" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".model.SensorRestartBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="com.example.appzorro.quickbloxsample.RestartSensor" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".model.NetworkChangeReceiver"
            android:enabled="true">
            <intent-filter>

                <!-- Intent filters for broadcast receiver -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".view.ForgotPassword"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".view.ContactUsActivity" />
        <!-- <activity android:name=".view.Twitter"></activity> -->
        <activity android:name=".view.Main5Activity"></activity>
    </application>

</manifest>
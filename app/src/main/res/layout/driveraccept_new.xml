<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagevieww"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:elevation="40dp"
        android:src="@drawable/ic_icon_pic" />

    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtdrivername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:text="Brak obama"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtrequestid"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtdrivername"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Request_id:: IDVIJAY"
                    android:textColor="#ff8533" />

                <View
                    android:id="@+id/view_"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/txtrequestid"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/pricelayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/view_"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@mipmap/ic_icon_map_new" />

                    <LinearLayout
                        android:id="@+id/ll_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/image2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtdistance"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="N/A"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/txtdestvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/ll_distance"
                            android:text="Distance"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_tym"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@mipmap/ic_icon_time_new" />

                    <LinearLayout
                        android:id="@+id/ll_tym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:visibility="visible"
                        android:layout_toRightOf="@+id/image_tym"
                        android:orientation="vertical">

                        <cn.iwgang.countdownview.CountdownView
                            android:id="@+id/count_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="11dp"
                            app:isHideTimeBackground="true"
                            app:isShowDay="false"
                            app:isShowHour="false"
                            app:isShowMinute="true"
                            app:isShowSecond="true"
                            app:isShowMillisecond="false"/>

                        <TextView
                            android:id="@+id/txt_tym_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/ll_distance"
                            android:text="Time"
                            android:layout_marginTop="2dp"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_price"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="5dp"
                        android:padding="4dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@+id/ll_price"
                        android:src="@drawable/ic_icon_dollar" />

                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:gravity="center"
                            android:text="$562.70"
                            android:textColor="@android:color/black"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/txtpricevalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/ll_distance"
                            android:text="Price"
                            android:textSize="10dp" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/pricelayout"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/ll_source_destination"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/pricelayout"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/addresslayout_destination"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtpickaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:drawableLeft="@drawable/ic_icon_destination"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="California"
                            android:maxLines="2"
                            android:textColor="@android:color/black"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txtdesheading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/txtpickaddress"
                            android:layout_centerHorizontal="true"
                            android:text="Source"
                            android:maxLines="1"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addresslayout_source"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtsource"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/ic_icon_destination"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="Los Angeles"
                            android:maxLines="2"
                            android:textColor="@android:color/black"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txtsourceHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/txtsource"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:maxLines="1"
                            android:text="Destination"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_source_destination"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/btnaccept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Accept"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/btReject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_design"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Reject"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/linear1_"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/my_profile_toolbar" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1_">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/driverpic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_icon_profile_pic" />

                <ImageView
                    android:id="@+id/imageedit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/driverpic"
                    android:layout_alignRight="@+id/driverpic"
                    android:layout_alignTop="@+id/driverpic"
                    android:src="@drawable/ic_icon_blue_edit" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_image"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_first_name"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="First Name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_first_name"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_user" />

                    <EditText
                        android:id="@+id/edtfirstname"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight=".90"
                        android:background="@null"
                        android:hint="Jacob"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_1"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_last_name"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Last Name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_last_name"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_lastname" />

                    <EditText
                        android:id="@+id/edtlastname"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight=".90"
                        android:background="@null"
                        android:hint="Black"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_12"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_email"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Email"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_email"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_email" />

                    <EditText
                        android:id="@+id/edtemail"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight=".90"
                        android:background="@null"
                        android:hint="Jacob@gmail.com"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_13"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_mob"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Mobile Number"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_mob"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_contact_number" />

                    <EditText
                        android:id="@+id/edphonenumber"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight=".90"
                        android:background="@null"
                        android:baselineAligned="false"
                        android:hint="+1234567890"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_14"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_currency"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Currency"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_currency"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_currency" />

                    <EditText
                        android:id="@+id/text_currency"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight=".90"
                        android:background="@null"
                        android:hint="USD"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_15"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_chnge_pwd"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_chnge_pwd"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_6"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_password" />

                    <TextView
                        android:id="@+id/txtpassworddd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.90"
                        android:drawableEnd="@drawable/ic_icon_edit"
                        android:gravity="center|start"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="CHANGE PASSWORD"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_16"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lbl_chnge_cmp"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Change Company"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbl_chnge_cmp"
                    android:layout_margin="8dp"
                    android:background="@drawable/txtview_design"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_7"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight=".10"
                        android:padding="9dp"
                        android:src="@drawable/ic_icon_company" />

                    <TextView
                        android:id="@+id/txtchangeccompany"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.90"
                        android:gravity="center|start"
                        android:drawableEnd="@drawable/ic_icon_edit"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="CHANGE COMPANY"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_17"
                android:layout_margin="8dp"
                android:orientation="horizontal"></LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>